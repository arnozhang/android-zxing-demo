<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center"
        tools:context="com.alipay.zxingdemo.activity.ZXingDemoMainActivity">

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textAllCaps="false"
            android:text="Scan"
            android:onClick="onScanClicked"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:textAllCaps="false"
            android:text="Scan Fullscreen"
            android:onClick="onScanFullscreenClicked"/>
    </LinearLayout>

    <TextView
        android:id="@+id/github_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="13dp"
        android:textColor="@color/link_text_color"
        android:text="@string/github_address"/>
</FrameLayout>
